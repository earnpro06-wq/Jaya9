    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-app.js";
        import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.8.0/firebase-auth.js";

        const firebaseConfig = {
            apiKey: "AIzaSyA-GSBF0PJDx8_AaFD0iyJiZMMsq8ORryE",
            authDomain: "jaya9-54ae3.firebaseapp.com",
            databaseURL: "https://jaya9-54ae3-default-rtdb.firebaseio.com",
            projectId: "jaya9-54ae3",
            storageBucket: "jaya9-54ae3.firebasestorage.app",
            messagingSenderId: "645319696874",
            appId: "1:645319696874:web:a664ff269a999add3d9293",
            measurementId: "G-QEZETFRFS5"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        window.auth = auth;

        function hideInitialLoader() {
            const loader = document.getElementById('loader-wrapper');
            loader.classList.add('loader-hidden');
            setTimeout(() => {
                loader.style.display = 'none';
                document.body.classList.remove('blur-active');
            }, 300);
        }

        onAuthStateChanged(auth, (user) => {
            if (user) {
                document.querySelector('.auth-bar').style.display = 'none';
                document.getElementById('main-footer').style.display = 'flex';
                document.getElementById('transaction-frame').src = 'transaction.html';
            } else {
                document.querySelector('.auth-bar').style.display = 'flex';
                document.getElementById('main-footer').style.display = 'none';
            }
            hideInitialLoader();
        });

        window.onLoginSuccess = function() {
            closeLogin();
        };
    </script>

    <script>
        function toggleMenu() {
            const sideModal = document.getElementById('side-modal');
            const overlay = document.getElementById('side-overlay');
            sideModal.style.display = 'block';
            setTimeout(() => {
                sideModal.classList.add('open');
                overlay.style.display = 'block';
                document.body.classList.add('blur-active');
                document.body.style.overflow = 'hidden';
            }, 10);
        }

        function closeSideMenu() {
            const sideModal = document.getElementById('side-modal');
            const overlay = document.getElementById('side-overlay');
            sideModal.classList.remove('open');
            overlay.style.display = 'none';
            document.body.classList.remove('blur-active');
            document.body.style.overflow = 'auto';
            setTimeout(() => {
                sideModal.style.display = 'none';
            }, 400);
        }

        function showLoader(callback) {
            const loader = document.getElementById('loader-wrapper');
            document.body.classList.add('blur-active'); 
            loader.style.display = 'flex';
            loader.classList.remove('loader-hidden');
            
            setTimeout(() => {
                loader.classList.add('loader-hidden');
                setTimeout(() => {
                    loader.style.display = 'none';
                    if(callback) callback();
                }, 300);
            }, 500);
        }

        function updateActiveNav(el) {
            document.querySelectorAll('.footer-item').forEach(i => i.classList.remove('active'));
            if(el) el.classList.add('active');
        }

        function goHome(el) {
            updateActiveNav(el);
            document.getElementById('transaction-view').style.display = 'none';
            document.getElementById('page-view').style.display = 'none';
            document.getElementById('home-body-content').style.display = 'block';
            closeLogin();
        }

        function openInternalPage(el, url) {
            updateActiveNav(el);
            showLoader(() => {
                document.getElementById('home-body-content').style.display = 'none';
                document.getElementById('transaction-view').style.display = 'none';
                const pageView = document.getElementById('page-view');
                const pageFrame = document.getElementById('page-frame');
                pageFrame.src = url;
                pageView.style.display = 'block';
            });
        }

        window.openTransaction = function() {
            showLoader(() => {
                document.getElementById('home-body-content').style.display = 'none';
                document.getElementById('page-view').style.display = 'none';
                document.getElementById('transaction-view').style.display = 'block';
            });
        }

        function openLogin() {
            showLoader(() => {
                const modal = document.getElementById('login-modal');
                document.getElementById('login-frame').contentWindow.location.replace('login.html');
                modal.style.display = 'block';
                setTimeout(() => { modal.classList.add('show'); }, 10);
            });
        }

        function openSignup() {
            showLoader(() => {
                const modal = document.getElementById('login-modal');
                document.getElementById('login-frame').contentWindow.location.replace('singup.html');
                modal.style.display = 'block';
                setTimeout(() => { modal.classList.add('show'); }, 10);
            });
        }

        function closeLogin() {
            const modal = document.getElementById('login-modal');
            modal.classList.remove('show');
            setTimeout(() => {
                modal.style.display = 'none';
                document.body.classList.remove('blur-active'); 
                document.body.style.overflow = 'auto';
            }, 400);
        }

        function filterGame(el, type) {
            document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));
            el.classList.add('active');
            console.log("Filtering for: " + type);
        }
    </script>
